{
  "name" : "ScreenLighter",
  "version" : "1.0.0",
  "manifest_version": 2,
  "description" : "Adjust screen light on every page",
  "background" : {
    "scripts" : ["background.js"],
    "persistent" : true
  },
  "browser_action" :
  {
    "default_icon" : {
      "19" : "light_on_128.png",
      "38" : "light_on_128.png"
    },
    "default_title" : "Screen Lighter"
  },
  "content_security_policy" : "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; img-src *",
  "permissions" : [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : [
        "contentscript.js"
      ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "16" : "light_on_128.png",
    "48" : "light_on_128.png",
    "128" : "light_on_128.png"
  }
}
